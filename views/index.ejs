<h3>Add Customer</h3>
<form method="post" action="/customer/add">
  <input type="text" name="name" placeholder="AddName"/>
  <input type="text" name="email" placeholder="AddEmail"/>
  <input type="submit" value="submit"/>
</form>

<h3>Customers</h3>
<ul>
  <% customers.forEach(function(customer){ %>
    <li><%= customer.value.name %></li>
    <%= customer.value.email %>
    <form method="post" action="/customer/delete/<%= customer.key %>">
      <input type="hidden" value="<%= customer.value.rev %>" name="rev"/>
      <input type="submit" value="X"/>
    </form>
  <% }); %>
</ul>